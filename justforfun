no = ("нет", "Нет", "ytn", "Ytn")
yes = ("да", "Да", "lf", "Lf")
dontknow = ("yt pyf.", "Yt pyf.", "[p", "{p", "не знаю", "Не знаю", "хз", "хз")

name = input("Как тебя зовут, мальчик? ")
print("Ну приветики, " + name + "!")

age = input("А сколько тебе годиков? ")
print("Хорошо, " + name +", что тебе уже "+ age + "!")

vopros = input("А хочешь проверить, как я – безэмоциональная программа – к тебе отношусь, судя по всего одному ответу на один простой вопрос? Пожалуйста, напиши да или нет, других ответов я пока не понимаю... ")
if (vopros in yes):
        print("Отлично, тогда у меня есть всего один вопрос к тебе:")

if (vopros in no):
        print("Ну что ж, на этом нить нашего разговора прерывается и ты идешь нахуй. Для кого я весь оставшийся код "
                "писал??? ")
        quit()